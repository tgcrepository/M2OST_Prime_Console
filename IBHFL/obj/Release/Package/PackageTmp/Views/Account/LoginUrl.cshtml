        .main-wrapper.web .login-banner {
            width: 100%;
            margin: 1%;
            flex: 0.8;
            display: flex;
            justify-content: center;
        }

        .main-wrapper.web .login-wrapper .login-form {
            box-shadow: none;
            /* max-width: 407px; */
            height: auto;
            width: 100%;
        }

        .main-wrapper.web .login-wrapper {
            margin: 0;
        }

        .main-wrapper.web .login-banner img {
            height: 100%;
            width: 100%;
        }

        .main-wrapper.web .login-flex {
            flex-direction: row;
            display: flex;
            height: 100%;
        }

        .main-wrapper.web .login-wrapper {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .main-wrapper.web .login-banner {
            width: auto;
            margin: 1%;
        }

        .main-wrapper.web .login-wrapper .login-form {
            box-shadow: none;
            /* width: 80%;
        height: 70vh; */
            width: 35rem;
            max-height: 40rem;
            flex-shrink: 0;
            border-radius: 0.625rem;
            background: #FFF;
            box-shadow: 4px 4px 20px 0px rgba(0, 0, 0, 0.25);
            display: flex;
            justify-content: center;
            flex-direction: column;
            padding: 10%;
        }

        .main-wrapper.web .login-wrapper {
            margin: 0;
        }

        .login-logo {
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
        }

        .password {
            position: relative;
        }

        .password-toggle {
            cursor: pointer;
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }
