        button {
            background: #F21323;
            color: rgb(255, 255, 255);
            padding: 10px 15px;
            border-radius: 7px;
        }
        /* web */
        .main-wrapper.web .login-flex {
            flex-direction: row;
            display: flex;
            height: 100%;
