            .main-wrapper.web {
                display: none;
            }

            .main-wrapper.mobile {
                display: flex;
                /*background: #F21323;*/
            }

                .main-wrapper.mobile .login-flex {
                    min-width: 100%;
                    min-height: 100%;
                    display: flex;
                    flex-direction: column;
                }
        }

        #u_id {
            display: block;
            width: 100%;
            border: 1px solid #aaa6a6;
            padding: 8px;
            margin-bottom: 15px;
