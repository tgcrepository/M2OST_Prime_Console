@{

    string error = string.Empty;
    if (System.Web.HttpContext.Current.Session["error"] != null)
    {
        error = (string)System.Web.HttpContext.Current.Session["error"];
        System.Web.HttpContext.Current.Session["error"] = null;
    }
}

<body>
    @if (lpList == null || lpList.Count == 0)
    {

        Response.Redirect("~/Account/Login");
    }
    else
    {
        <div class="main-wrapper web ">
            <!-- Main Content -->
            <div class="login-flex">
                <div class="login-wrapper">
                    <form class="login-form" method="post" action="@Url.Action("LoginCheck", "Account")" id="form_model_index">
                        <div class="login">
                            <div class="login-logo">
                                @*<img src="~/images/image002.png" alt="">*@
                                <img src="@Url.Content(lpList[0].Logo_Image)" alt="" style="height: 100%; width: 80%;">
                            </div>
                            <h2 style="color:@lpList[0].Text_Button_Color !important">Login</h2>
                            <p>Login in to stay connected.</p>
                            <div class="form-control">
                                <span>User Id</span>
                                <input type="text" class="login-input validate[required]" id="user_name" name="user_name" placeholder="Corporate User Id" />
                            </div>
                            <div class="form-control">
                                <span>Password</span>
                                <div class="password">
                                    <input type="password" class="login-input validate[required]" id="password" name="password" placeholder="Password" />
                                    <img src="~/images/eye-slash.svg" id="togglePassword"
                                         class="password-toggle" alt="" onclick="showHidePassword()">
                                </div>
                            </div>
                            <div class="error-div" id="error-div">
                                @if (error != "")
                                {<span>@error</span>}
                            </div>
                            <button class="submit" style="background:@lpList[0].Text_Button_Color !important">
                                Sign in
                            </button>
                            @*<div class="forgot-password">
                                    <a id="atg" onclick="showidfield();">Forgot Password ?</a>
                                </div>
                                <div id="forpswd">
                                    <div class="flex">
                                        <input id="u_id" placeholder="Enter UserID" type="text" />
                                        <input id="forbtn" class="btn btn-primary" type="button" onclick="sendpassword()" value="Submit" />
                                    </div>
                                    <img id="loadgif" src="~/Content/images/loadinggif.gif" style="display:none;" />
                                </div>*@
                            <div class="privacy-policy">
                                <span>Privacy Policy</span>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="login-banner">
                    @*<img src="https://www.m2ost.in/Bata_Content/Image/login-banner.jpg"  alt="Image"/>*@
                    <img src="@Url.Content(lpList[0].Background_Image)" alt="Image" />
                </div>
            </div>

            <!-- Main Content -->
        </div>

        <div class="main-wrapper mobile" style="padding:0px">

            <div class="login-flex">
                <div class="login-banner-mobile">
                    <img src="@Url.Content(lpList[0].Background_Image)" alt="Image" />
                </div>
                <div class="login-wrapper">
                    <form class="login-form" method="post" action="@Url.Action("LoginCheck", "Account")" id="form_model_index" name="register-form">
                        <h2 style="color:@lpList[0].Text_Button_Color !important">Login</h2>
                        <p>Login in to stay connected.</p>
                        <div class="form-control">
                            <span>User Id</span>
                            <input type="text" class="login-input validate[required]" id="user_name_mob" name="user_name" autofocus placeholder="Corporate User Id" />
                            <p class="error username-error" id="username-error"></p>
                        </div>
                        <div class="form-control">
                            <span>Password</span>
                            <div class="password">
                                <input type="password" class="login-input validate[required]" id="password_mob" name="password" placeholder="Password" />
                                <img src="~/images/eye-slash.svg" id="togglePassword_mob"
                                     class="password-toggle" alt="" onclick="showHidePassword()" />
                                <p class="error password-error" id="password-error"></p>
                            </div>
                        </div> <div class="error-div" id="error-div_mob">
                            @if (error != "")
                            {<span>@error</span>}
                        </div>
                        <button class="submit" onclick="checkCondition()" style="background:@lpList[0].Text_Button_Color !important">
                            Sign in
                        </button>
                        @*<div class="forgot-password">
                                <a id="atg" onclick="showidfield();">Forgot Password ?</a>
                            </div>
                            <div id="forpswd1">
                                <div class="flex">
                                    <input id="u_id" placeholder="Enter UserID" type="text" />
                                    <input id="forbtn" class="btn btn-primary" type="button" onclick="sendpassword()" value="Submit" />
                                </div>
                                <img id="loadgif" src="~/Content/images/loadinggif.gif" style="display:none;" />
                            </div>*@
                        <div class="privacy-policy">
                            Privacy Policy
                        </div>
                    </form>
                </div>
            </div>
        </div>

    }

    <script>
        window.onload = function () {
            $("#forpswd").hide();
            $("#loadgif").hide();
        };
        $(function () {
            $("#form_model_index").validationEngine();
        });
        function showidfield() {
            $("#forpswd").show();
            document.getElementById("forpswd1").style.display = "block";
            $("#atg").hide();
        }
    </script>
    <script>
        // jQuery script for password toggle
        function showHidePassword() {
            //var passwordField = $("#password");
            //var passwordFieldType = passwordField.attr('type');
            //passwordField.attr('type', passwordFieldType === 'password' ? 'text' : 'password');

            //// Toggle between eye and eye-slash icons
            //var eyeIcon = $(".password img");
            //if (passwordFieldType === 'password') {
            //    eyeIcon.attr('src', './images/eye.svg');
            //} else {
            //    eyeIcon.attr('src', './images/eye-slash.svg');

            //}

            var input = document.querySelector('#password');
            var input_mob = document.querySelector('#password_mob');

            var eyeIcon = $("#togglePassword");
            if (input.type === "password") {
                input.type = "text";
                document.getElementById('togglePassword').src = "./images/eye.svg";
            } else {
                input.type = "password";
                document.getElementById('togglePassword').src = "./images/eye-slash.svg";
            }


            if (input_mob.type === "password") {
                input_mob.type = "text";
                document.getElementById('togglePassword_mob').src = "./images/eye.svg";
            } else {
                input_mob.type = "password";
                document.getElementById('togglePassword_mob').src = "./images/eye-slash.svg";
            }
        };
    </script>

    <script>
        $(function () {
            setTimeout(function () { $("#error-div").hide("fade"); }, 5000)
        });

        $(function () {
            setTimeout(function () { $("#error-div_mob").hide("fade"); }, 5000)
        });

        function checkCondition() {

            if (document.getElementById("user_name_mob").value === "") {
                document.querySelector(".username-error").innerHTML = "Please enter a username";
                document.querySelector(".username-error").style.display = "block";
                document.getElementById("username-error").style.color = "red";
                event.preventDefault();
                setTimeout(function () { $(".username-error").hide("fade"); }, 5000)
            }


            if (document.getElementById("password_mob").value === "") {
                document.querySelector(".password-error").innerHTML = "Please enter a password";
                document.querySelector(".password-error").style.display = "block";
                document.getElementById("password-error").style.color = "red";
                event.preventDefault();
                setTimeout(function () { $(".password-error").hide("fade"); }, 5000)
            }
            return false;

        };
    </script>
</body>

