            text-align: center;
            flex: 1;
        }

            .login-wrapper .login-form {
                background: #fff;
                padding: 18px;
                box-shadow: 0 0 10px #b0b0b0;
                border-radius: 11px;
                display: flex;
                flex-direction: column;
                justify-content: space-evenly;
                height: 60vh;
            }

            .login-wrapper .form-control input {
                display: block;
                width: 100%;
                border: 1px solid #aaa6a6;
                padding: 8px;
                margin-bottom: 15px;
                border-radius: 5px;
            }

            .login-wrapper .form-control span {
                width: 100%;
