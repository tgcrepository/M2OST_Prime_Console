            <div class="form-group col-md-12">
                <div class="col-md-2">
                    <label for="" style="color:#000000">To</label>
                </div>
                <div class="col-md-10">
                    <h6 style="color:#000000">paathshala-learningtech@paathshala.biz</h6>
                </div>


            </div>
            <div class="form-group col-md-12">
                <div class="col-md-2">
                    <label for="" style="color:#000000">Subject</label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" id="sub" name="sub">
                </div>


            </div>
            <div class="form-group col-md-12">
                <div class="col-md-2">
                    <label for="" style="color:#000000">Message</label>
                </div>
                <div class="col-md-10">
                    <textarea class="form-control" rows="5" id="msg" name="msg"></textarea>
                </div>


                @*<input type="text" class="form-control" id="msg" name="msg">*@
            </div>

            <div class="form-group col-md-12 ">
                <div class="col-md-2"></div>
                <div class="col-md-6">
                    <div class="col-md-6">

                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success" style="background-color:#019934">Send</button>
                    </div>

                </div>

            </div>
