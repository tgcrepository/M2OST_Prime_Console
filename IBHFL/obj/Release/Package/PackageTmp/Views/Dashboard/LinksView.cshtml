    $(document).ready(function () {
        var url = "@linkToOpen";

        // Create and append iframe
        var iframe = $('<iframe>', {
            src: url,
            id: 'myIframe',
            width: '600px',
            height: '400px'
        });
        $('body').append(iframe);

        // Open link in new tab
