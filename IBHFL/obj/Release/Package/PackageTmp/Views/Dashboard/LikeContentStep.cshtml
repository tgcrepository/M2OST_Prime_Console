

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "LikeContentStep";
    int cid = (int)ViewData["cid"];
    string mes = (string)ViewData["mes"];
    int x = 10;
}

<body oncontextmenu="return false">

    <a href="" id="backLink"> <small class="text-navy"> <i class="fa fa-fw" aria-hidden="true" title="Copy to use chevron-circle-left"></i> Back</small> </a>
    <div class="btmclr"> </div>


    <form class="form-horizontal" method="post" action="/Dashboard/emaildata">
