                    <div class="tab-content">

                        <div class="tab-pane active" id="tab_1">
                            @if (result.UNREAD.Count != 0)
                            {
                                foreach (var itm in result.UNREAD)
                                {

                                    <div class="row" style="border-bottom:1px solid #808080;">
                                        <div class="" >

                                          
                                                
                                                <div class="">


                                                    <p>
                                                        <pre style="background-color:gray;color:white;white-space: pre-line"> Title&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;&nbsp;@itm.event_title</pre>
                                                    </p>
                                                    <p>
                                                        <pre style="white-space: pre-line"> Event Type&nbsp;:&nbsp;@itm.event_type</pre>
                                                    </p>
                                                    <p>
                                                        <pre style="background-color:gray;color:white;white-space: pre-line"> Status&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;:&nbsp;&nbsp;@itm.MESSAGE</pre>
                                                    </p>
                                                    <br />

                                                    <a style="float:right" href="@Url.Action("ScheduledEvent", "Dashboard", new { sid = @itm.id_scheduled_event })"><button class="btn btn-info btn-mini" style="width:100%"><i class="icon-folder-open"></i>Detail</button></a>

                                                </div>
                                               
                                            
                                           
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                        <h4 style="margin-top: 71px;text-align:center">....There are no unread event notifications....</h4>
                    }

                        </div>
