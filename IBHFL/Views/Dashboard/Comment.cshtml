
@{
    ViewBag.Title = "Comment";
    int  id = (int)ViewData["obj"];

}
<body oncontextmenu="return false">
    <div class="container" style="width:75%;">


        <div class="row">

            <form class="form-horizontal" method="post" action="/Dashboard/EventUnSubscribe">

                <div class="form-group">
                    <label class="col-lg-2 control-label">Comment Your Reason Here</label>
                    <div class="col-lg-10">
                        <textarea name="comment" id="comment" class="form-control" cols="30" rows="10" style="width: 500px;"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10">
                        <input type="hidden" class="form-control" id="Eid" value="@id" name="Eid">

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <button type="submit" style="background-color: #019934;width: 63px;" class="btn btn-success">Submit</button>
                    </div>
                </div>

            </form>

        </div>

    </div>
    </body>
