@{
    ViewBag.Title = "AssessmentView";
    IBHFL.Models.MyReport detail = (IBHFL.Models.MyReport)ViewData["result"];

    int i = 1;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>*@



<style>
    .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
        color: #fff;
        cursor: default;
        background-color: #019934;
        border: 1px solid #ddd;
        border-bottom-color: transparent;
    }

    a {
        color: black
    }
</style>
<body oncontextmenu="return false">
    <div class="container assessment" style="width:100%;">

        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1"
                   data-toggle="tab">Learning Assessment</a>
            </li>
            <li class="">
                <a href="#tab_2"
                   data-toggle="tab">Psychometric Assessment</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
                @foreach (var itm in detail.LEARNING)
                {
                    <div class="item">
                        <h5 class="categories_header_text">
                            @itm.assessment_name
                        </h5>
                        <pre>completed date : @itm.LogDate</pre>
                        <pre> @itm.assessment_description</pre>

                        <a href="@Url.Action("MyReportSummary", "Dashboard", new{LID=@itm.id_assessment_log,SID=@itm.id_assessment_sheet,id_assessmnent=@itm.id_assessment,date=@itm.LogDate})">
                            <button class="btn btn-info btn-mini" style=""><i class="icon-folder-open"></i>Detail</button>
                        </a>
                    </div>

                    <!-- <a href="@Url.Action("MyReportSummary", "Dashboard", new{LID=@itm.id_assessment_log,SID=@itm.id_assessment_sheet,id_assessmnent=@itm.id_assessment,date=@itm.LogDate})"><button class="btn btn-info btn-mini" style=""><i class="icon-folder-open"></i>Detail</button></a>
                -->
                }
            </div>
            <div class="tab-pane" id="tab_2">
                @foreach (var itm in detail.PSYCHOMETRIC)
                {
                    <div class="item">
                        <h5 class="categories_header_text">
                            @itm.assessment_name
                        </h5>
                        <pre style="white-space: pre-line">completed date : @itm.LogDate</pre>
                        <pre style="white-space: pre-line"> @itm.assessment_description</pre>
                        <a href="@Url.Action("MyReportSummary", "Dashboard", new { LID = @itm.id_assessment_log,SID=@itm.id_assessment_sheet,id_assessmnent=@itm.id_assessment,date=@itm.LogDate  })"><button class="btn btn-info btn-mini" style=""><i class="icon-folder-open"></i>Detail</button></a>
                    </div>
                }

            </div>



        </div>

    </div>
</body>